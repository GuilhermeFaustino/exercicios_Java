public class Estacionamento {
		

	Vaga[] vaga = new Vaga[4];
	
	public void addCarro(int posicao, Vaga carro) {		
		 vaga[posicao] = carro;
		 
	}
	
	public void removeCarro(String placa) {
		for(int i=0; i<vaga.length; i++) {
			if(!(vaga[i] == null)){
				System.out.println(placa);
				if(vaga[i].getPlaca() == placa) {
					vaga[i] = null;
					System.out.println("Removido");
					listarVagas();
				}
			}
		}
		
	}	
	
	public void listarVagas() {
		System.out.println("As Vagas Disponiveis são ");
		
		for(int i=0; i<vaga.length; i++) {
			if(vaga[i] == null) {
				System.out.println("vaga livre " + i);
			}else {
				System.out.println("vaga  ocupada " + i + vaga[i]);
			}			
			
		}
	
	}	
	
}







